<![CDATA[
function AddToGC(key, func)
        local gcMetatable = platform.withGC(getmetatable)
        gcMetatable[key] = func
end
 
local function ${1:YourFunction}(gc)

end
 
AddToGC("YourFunction", YourFunction)

